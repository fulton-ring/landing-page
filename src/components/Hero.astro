---
import LandingSegmentLayout from "../layouts/LandingSegmentLayout.astro";
---

<LandingSegmentLayout>
  <div class="min-h-[60-vh] flex justify-center p-8">
    <div class="max-w-3xl">
      <h1 class="text-3xl md:text-5xl leading-tight mb-6 font-light">
        Less Buzzwords,<br />
        More Results
      </h1>
      <div class="flex flex-col md:flex-row md:items-center md:gap-16">
        <p
          class="text-lg md:text-xl leading-relaxed md:mb-0 mb-8 text-gray-600 font-light"
        >
          From extracting untapped data to building apps from the ground up,
          we'll work with you to deliver real generative AI solutions for your
          business
        </p>
        <a
          href="https://calendly.com/fulton-ring"
          class="w-full md:w-auto inline-block text-center px-6 py-3 md:px-8 md:py-4 border-2 border-gray-900 text-gray-900 hover:bg-gray-900 hover:text-white no-underline font-light transition-colors whitespace-nowrap"
          >Get in Touch</a
        >
      </div>
    </div>
  </div>
</LandingSegmentLayout>
