---
interface Props {
  number: string;
  title: string;
  description: string;
  bulletPoints: string[];
}

const { number, title, description, bulletPoints } = Astro.props;
---

<div
  class="p-8 transition-all hover:shadow-xl bg-white flex flex-col h-full border border-gray-200"
>
  <!-- Top section: Minimum height ensures dividers align across cards -->
  <div class="flex-shrink-0 flex flex-col">
    <div
      class="w-12 h-12 bg-gray-900 text-white flex items-center justify-center mb-4 font-mono text-xl"
    >
      {number}
    </div>

    <div class="h-20 flex items-center mb-3">
      <h3 class="text-xl md:text-2xl font-bold text-gray-900 leading-tight">
        {title}
      </h3>
    </div>

    <p class="text-gray-600 font-light leading-relaxed md:h-80 mb-2">
      {description}
    </p>
  </div>

  <!-- Divider and Bullet Points Section -->
  <div class="pt-4 border-t border-gray-100">
    <ul class="text-sm text-gray-500 space-y-2 font-light">
      {
        bulletPoints.map((point) => (
          <li class="flex items-start gap-2">
            <span class="text-gray-400 mt-1 flex-shrink-0">â€¢</span>
            <span>{point}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
