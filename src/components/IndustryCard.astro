---
import { Store, Factory, Zap, Shield, Home, MapPin } from "lucide-astro";

interface Props {
  iconName: "Zap" | "Factory" | "Home" | "Shield" | "Store" | "MapPin";
  title: string;
  description: string;
  bulletPoints: string[];
}

const { iconName, title, description, bulletPoints } = Astro.props;

const IconComponent = {
  Zap,
  Factory,
  Home,
  Shield,
  Store,
  MapPin,
}[iconName];
---

<div class="bg-white p-8 hover:shadow-xl transition-all flex flex-col h-full">
  <!-- Top section: Minimum height ensures dividers align across cards -->
  <div class="flex-shrink-0 flex flex-col">
    <div class="h-10 mb-4 flex justify-center">
      <IconComponent class="w-10 h-10 text-gray-900" />
    </div>

    <div class="h-14 flex items-center justify-center mb-3">
      <h3 class="text-xl font-bold text-gray-900 text-center leading-tight">
        {title}
      </h3>
    </div>

    <p
      class="text-gray-600 font-light leading-relaxed text-center md:h-56 mb-2"
    >
      {description}
    </p>
  </div>

  <!-- Divider and Bullet Points Section -->
  <div class="pt-4 border-t border-gray-100">
    <ul class="text-sm text-gray-500 space-y-2 font-light text-left">
      {
        bulletPoints.map((point) => (
          <li class="flex items-start gap-2">
            <span class="text-gray-400 mt-1 flex-shrink-0">â€¢</span>
            <span>{point}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
