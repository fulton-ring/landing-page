---
import fcLogo from "../assets/fc_logo.svg";
import guardianLogo from "../assets/guardian_logo.svg";
import reutersLogo from "../assets/reuters_logo.svg";
---

<div class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-8">
    <p class="text-center text-gray-500 text-sm uppercase tracking-wider mb-8">
      Featured By
    </p>

    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center max-w-3xl mx-auto"
    >
      <a
        href="https://www.fastcompany.com/91294411/trump-removed-an-online-tool-that-predicts-your-climate-risk-rogue-data-scientists-rebuilt-it"
        class="flex justify-center md:justify-end"
      >
        <img
          src={fcLogo.src}
          alt="Fast Company Logo"
          class="h-8 opacity-60 hover:opacity-100 transition-opacity invert"
        />
      </a>

      <a
        href="https://www.theguardian.com/environment/ng-interactive/2025/mar/26/extreme-weather-risk-tool-fema-trump"
        class="flex justify-center"
      >
        <img
          src={guardianLogo.src}
          alt="Guardian Logo"
          class="h-12 opacity-60 hover:opacity-100 transition-opacity"
        />
      </a>

      <a
        href="https://www.context.news/digital-rights/volunteers-on-right-side-of-history-fight-trump-data-purge"
        class="flex justify-center md:justify-start"
      >
        <img
          src={reutersLogo.src}
          alt="Reuters Logo"
          class="h-12 opacity-60 hover:opacity-100 transition-opacity"
        />
      </a>
    </div>
  </div>
</div>
